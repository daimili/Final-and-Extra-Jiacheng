<!DOCTYPE html>


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Jiacheng Food</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/">Jiacheng Food</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Menu", menu_url %> </li>
            <li><%= link_to "Location", location_url %> </li>
            <li><%= link_to "help", help_url %></li>
            <% if(signed_in?) %>
              <li><%= link_to "Reservation", reservations_url %></li>
              <li><%= link_to "Personal Information", user_url(current_user) %></li>
              <% if(admin?) %>
                <li><%= link_to "Loyalty Cards Information", users_url %></li>
              <% end %>
           <% end %>

            <% if signed_in? %>
                <li>
                  <%= link_to "Sign Out", session_url, method: 'delete' %></li>

              <% else %>
                <li><%= link_to "Sign In", new_session_url %></li> <li><%= link_to "Sign Up", new_user_url %></li>

              <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">

    <% if notice.present? %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>

      <%= notice %>
    </div>
    <% end %>
      <br>
      <br>
      <br>
      <br>
      <br>
     <% if signed_in? %>
        <h2>Welcome back, <%= current_user.email %></h2>
    <% end %>
    <%= yield %>

    <hr>

    <footer>
      <p>&copy; Company 2012</p>
    </footer>

  </div>

</body>
</html>

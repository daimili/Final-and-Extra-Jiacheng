<h1>Listing users</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <%if user.id != current_user.id%>
    <tr>
      <td><%= user.name %></td>
      <td><%= link_to 'Show', user , class: 'btn btn-primary'%></td>
      <td><%= link_to "Add Friend", follows_path(:follower_id => user), class: 'btn btn-success', :method => :post %> </td>
    </tr>
    <%end%>
<% end %>
</table>



<h1>Listing boards</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>User</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @boards.each do |board| %>
  <tr>
    <td><%= board.name %></td>
    <td><%= board.description %></td>
    <td><%= User.find(board.user_id).name %></td>
    <td><%= Category.find(board.category_id).name %></td>
    <td><%= link_to 'Show', board, class: 'btn btn-primary' %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Board', new_board_path, class: 'btn' %>

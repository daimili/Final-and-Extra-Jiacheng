<h1>Listing pins</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Description</th>
    <th>User</th>
    <th>Board</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pins.each do |pin| %>
  <tr>
    <td><%= pin.description %></td>
    <td><%= User.find(pin.user_id).name %></td>
    <td><%= Board.find(pin.board_id).name %></td>
    <td><%= link_to 'Show', pin, class: 'btn btn-primary' %></td>






  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Pin', new_pin_path, class: 'btn' %>

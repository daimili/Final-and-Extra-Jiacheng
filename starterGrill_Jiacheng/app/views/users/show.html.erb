<p id="notice"><%= notice %></p>

<% if signed_in? %>

<h2> Personal information Page </h2>
<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Loyalty Points:</b>
  <%= @user.loyaltyPoint %>
</p>




<p> <b> Reservations: </b> </p>
  <table class="table table-striped table-hover">
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Guest number</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @reservations.each do |reservation| %>
    <% user = User.find(reservation.user_id) %>
    <tr>
      <td><%= link_to user.name,user_url(user) %></td>
      <td><%= reservation.date %></td>
      <td><%= reservation.guest_number %></td>
      <td><%= link_to 'Show', reservation %></td>
      <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
      <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>



<% end %>


<%= link_to 'Edit', edit_user_path(@user), class: 'btn' %> |
<%= link_to 'Back', login_path, class: 'btn' %>

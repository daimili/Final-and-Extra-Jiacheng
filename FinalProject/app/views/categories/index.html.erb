<h1>Listing categories</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <% if signed_in? %>
    <td><%= link_to 'Show', category, class: 'btn btn-primary' %></td>
    <% end %>

  </tr>
<% end %>
</table>

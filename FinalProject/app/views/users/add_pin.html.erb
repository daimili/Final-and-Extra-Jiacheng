<h1>Pin it</h1>

<%if signed_in? %>
  <% if current_user.boards.present? %>
      <%= render 'addpinform' %>
      <%= link_to 'Back', user_path(current_user) %>
  <% else %>
      <p>There is no board in your account, you should create one first, redirecting........</p>
      <meta http-equiv="refresh" content="3;url=<%=new_board_path%>">
  <% end%>
<% else %>
  You are not signed in yet!
<% end %>

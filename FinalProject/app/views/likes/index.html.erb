<h1>Listing likes</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Pin</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @likes.each do |like| %>
  <tr>
    <td><%= like.pin.description %></td>
    <td><%= like.user.name %></td>
    <td><%= link_to 'Show', like, class: 'btn btn-primary' %></td>
    <td><%= link_to 'Edit', edit_like_path(like), class: 'btn btn-warning' %></td>
    <td><%= link_to 'Destroy', like, class: 'btn btn-danger',method: :delete, data: { confirm: 'Are you sure?' } %></td>



  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Like', new_like_path, class: 'btn' %>
